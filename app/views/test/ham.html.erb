<canvas id="canvas" width="1024" height="1024"></canvas>

<script type="text/javascript">
const canvas = document.getElementById('canvas');
const ctx = canvas.getContext('2d');
ctx.translate(0.5, 0.5);
ctx.scale(6, 6);
ctx.font = '3px serif';
ctx.lineWidth = 1.0;
ctx.textAlign = 'center';

</script>
